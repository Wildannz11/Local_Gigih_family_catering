<div class="container">
  <%= form_with(model: item, local: true) do |form| %>
    <% if item.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved : </h2>

        <ul>
          <% item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, placeholder: "Nama" %>
    </div>

    <div>
      <%= form.label :price, style: "display: block" %>
      <%= form.text_field :price, placeholder: "Harga" %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, placeholder: "Deskripsi" %>
    </div>

    <div>
    
    <%= form.collection_check_boxes :category_ids, @categories.sort_by(&:name) || [], :id, :name do |c| %>
      <%= c.check_box %>&#9;<%= c.label %>
      <br>
    <% end %>
    </div>

    <br>        

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>