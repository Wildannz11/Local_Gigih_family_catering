<div class="containerr container" >
	<h1>Generate Report</h1>

	<div class="p-2 mb-4 bg-light rounded-3">
		<div class="container-fluid py-2">
			<%= form_with url: orders_path, method: :get do |form| %>
				<%= form.label 'SOrt by Customer Email', style: "display: block" %>
				<%= form.collection_select :email, Customer.all, :email, :email %>
				<br><br>
				<%= form.submit "Search", class:'btn btn-secondary'%>
			<% end %>
		</div>
	</div>

	<div class="p-2 mb-4 bg-light rounded-3">
		<div class="container-fluid py-2">
			<%= form_with url: orders_path, method: :get do |form| %>
				<%= form.label 'Sort by Total Price', style: "display: block" %>
				<%= form.number_field :total_price, class:"form-control" %>
				<br>
				<%= form.submit "Search", class:'btn btn-secondary'%>
			<% end %>
		</div>
	</div>

	<%= link_to "Back", orders_path, class:'btn btn-dark' %>
</div>